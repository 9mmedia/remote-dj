<div class="search-results">
  <div class="help-info">
    Found <%= pluralize @results.length, 'result' %>. Tap to queue track.
  </div>
  <ul>
    <% @results.each do |item| %>
      <li class="search-result" onclick="" data-title="<%= item.title %>" data-artist="<%= item.artists.first %>" data-album="<%= item.album %>" data-url="<%= item.url %>">
        <span class="song-name"><%= item.title %></span>
        <span class="band-album-name"><%= item.artists.first %> - <%= item.album %></span>
      </li>
    <% end %>
  </ul>
  <div class="control-bar">
    <%= link_to 'Done', root_path, class: 'btn' %>
  </div>
</div>
